{{outlet}}

<div class="login-wrapper">
    <form class="form-signin">
        <img class="mb-3" src="https://png.pngtree.com/svg/20150807/fec2f24c9e.svg" width="100" height="100">
        <h1 class="h3 mb-4 font-weight-normal">Please fill the information</h1>

        <label for="inputEmail" class="sr-only">Name</label>
        {{input  class="form-control mb-3" type="text" placeholder="Name" value=name
        required=true}}

        <label for="inputEmail" class="sr-only">Email address</label>
        {{input type="email" class="form-control mb-3"  placeholder="Email address" value=email required=true}}

        <label for="inputPassword" class="sr-only">Password</label>
        {{input type="password" class="form-control mb-3"  placeholder="Password" value=password required=true}}

        <button {{action "signupUser" preventDefault=false}} class="btn btn-lg btn-primary btn-block" type="submit">Sign
            up</button>
    </form>

</div>